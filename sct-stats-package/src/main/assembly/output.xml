<assembly>
<id>package</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>*.sh</include>
        <include>*.bat</include>
      </includes>
    </fileSet>  
    <fileSet>
      <directory>../sct-stats-generator/config</directory>
      <outputDirectory>/config</outputDirectory>
      <includes>
        <include>intConfig.xml</include>
        <include>extConfig.xml</include>
      </includes>
    </fileSet>   
    <fileSet>
      <directory>../sct-stats-generator/target</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>stats-gen.jar</include>
      </includes>
    </fileSet>        
    <fileSet>
      <directory>httpServer</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>  
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>runtime</scope>
      <excludes>
        <exclude>commons*</exclude>
        <exclude>hsqldb*</exclude>
        <exclude>log4j*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <includeBaseDirectory>false</includeBaseDirectory>
</assembly>
